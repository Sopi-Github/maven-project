pipeline
	  { 
		  agent any
		stages
		{
			stage ('scm checkout')
			       {
			  steps {
				git branch: 'master', url: 'https://github.com/Sopi-Github/maven-project.git'
			       }
		    }
			stage ('build && SonarQube analysis')
			{
			  steps {
			   withMaven(jdk: 'localjdk-1.8', maven: 'localmevan') {
		    sh 'mvn clean package'
				}
	}
	}
            stage ('deploy')
			     { 
				  steps {
				  sshagent(['cicd']) {
                          sh 'scp -o StrictHostkeyChecking=no /var/lib/jenkins/workspace/maven-tomcat-pipeline-job/webapp/target/webapp.war ec2-user@172.31.14.11:/usr/share/tomcat/webapp'
						  }
				 }
}
}
}
